{
  "name": "ai-interviewer-backend",
  "version": "1.0.0",
  "description": "Express backend for AI Interviewer web app",
  "main": "backend/dist/server.js",
  "type": "module",
  "scripts": {
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "tsc -p backend/tsconfig.json",
    "build:frontend": "tsc -p tsconfig.json && node backend/scripts/remove-exports.mjs",
    "start": "node backend/scripts/inject-env.mjs && node backend/dist/server.js",
    "dev": "nodemon --exec \"node backend/scripts/inject-env.mjs && npm run build:backend && node backend/dist/server.js\"",
    "ts:build": "npm run build",
    "ts:watch": "tsc --watch -p backend/tsconfig.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "express",
    "api",
    "interviewer"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "@supabase/supabase-js": "^2.38.4",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "typescript": "^5.4.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "roots": [
      "<rootDir>/frontend/ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  }
}