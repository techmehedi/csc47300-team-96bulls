{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "./frontend/js",
    "rootDir": "./frontend/ts",
    "lib": ["ES2020", "DOM"],
    "declaration": true,
    "sourceMap": true
  },
  "include": ["frontend/ts/**/*.ts"],
  "exclude": [
    "node_modules",
    "backend/**",
    "frontend/ts/**/*.test.ts"
  ]
}


